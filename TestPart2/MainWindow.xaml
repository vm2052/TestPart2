<Window x:Class="TestPart2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPart2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#F9FBC0"
        xmlns:vm="clr-namespace:TestPart2.ViewModels"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Grid Margin="20">
        <Border CornerRadius="20"
                Background="White"
                Padding="10"
                >
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="10" Opacity="0.2"/>
            </Border.Effect>
            <DockPanel LastChildFill="True" Background="White">
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" FontWeight="DemiBold" FontSize="14" Content="Тестовое WPF-приложение для SmartMealsService"/>
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                >

                        <!-- Minimize Button -->
                        <Button x:Name="MinimizeButton"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="MinimizeButton_Click"
                                Width="40"
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Image Source="/Assets/minimize_icon.png"/>
                        </Button>

                        <!-- Close Button -->
                        <Button x:Name="CloseButton"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Click="CloseButton_Click"
                                Width="40"
                                Height="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Image Source="/Assets/close_icon.png"/>
                        </Button>
                    </StackPanel>
                </Grid>
                <Border CornerRadius="20"
                BorderBrush="Black"
                BorderThickness="2"
                Background="White"
                        ClipToBounds="True"
                        SnapsToDevicePixels="True">
                    <Grid>
                        <DataGrid 
                        BorderThickness="0"
                        GridLinesVisibility="None"
                        VerticalGridLinesBrush="Black"
                        HorizontalGridLinesBrush="Black"
                        HeadersVisibility="Column"
                        Background="Transparent"
                        ItemsSource="{Binding EnvironmentVariables}"
                        SelectionMode="Extended"
                        AutoGenerateColumns="False"
                        RowEditEnding="VariablesDataGrid_RowEditEnding"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="False"
                        CanUserSortColumns="False"
                        IsReadOnly="False">
                            <DataGrid.RowHeaderStyle>
                                <Style TargetType="DataGridRowHeader">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Style>
                            </DataGrid.RowHeaderStyle>
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="FontWeight" Value="DemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10,5,10,5"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="Padding" Value="10,5,10,5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="BorderBrush" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Поле" Width="200" Binding="{Binding Name}" />
                                <DataGridTextColumn Header="Значение" Width="200" Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTextColumn Header="Комментарий" Width="*" Binding="{Binding Comment}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>